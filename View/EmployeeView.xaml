                    </Canvas>
                </Viewbox>
                <Label Content="NAME" FontSize="20" Margin="20,0,0,0" FontWeight="Bold"
                    HorizontalAlignment="Right" Foreground="DarkBlue"/>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBox Controls:TextBoxHelper.Watermark="First Name" Controls:TextBoxHelper.ClearTextButton="True"
                         FontSize="20" Margin="20,0,20,0" Width="300"/>
                <TextBox Controls:TextBoxHelper.Watermark="Last Name" Controls:TextBoxHelper.ClearTextButton="True"
                         FontSize="20"  Margin="0,0,20,0" Width="300"/>
                <TextBox Controls:TextBoxHelper.Watermark="Middle Name" Controls:TextBoxHelper.ClearTextButton="True"
                         FontSize="20" Margin="0,0,20,0" Width="200"/>
            </WrapPanel>

            <WrapPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="3">
                <Viewbox Width="48" Height="48">
                    <Canvas Width="24" Height="24">
                        <Path Data="M12,3A4,4 0 0,1 16,7A4,4 0 0,1 12,11A4,4 0 0,1 8,7A4,4 0 0,1 12,3M16,13.54C16,14.6 15.72,17.07 13.81,19.83L13,15L13.94,13.12C13.32,13.05 12.67,13 12,13C11.33,13 10.68,13.05 10.06,13.12L11,15L10.19,19.83C8.28,17.07 8,14.6 8,13.54C5.61,14.24 4,15.5 4,17V21H10L11.09,21H12.91L14,21H20V17C20,15.5 18.4,14.24 16,13.54Z" Fill="Black" />
                    </Canvas>
                </Viewbox>
                <Label Content="POSITION" FontSize="20" Margin="0,5" FontWeight="Bold"
                    HorizontalAlignment="Right" Foreground="DarkBlue"/>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBox Controls:TextBoxHelper.Watermark="Position" Controls:TextBoxHelper.ClearTextButton="True"
                         FontSize="20" Margin="20,0,20,0" Width="300"/>
            </WrapPanel>

            <WrapPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="3">
                <Viewbox Width="48" Height="48">
                    <Canvas Width="24" Height="24">
                        <Path Data="M12,3C7.46,3 3.34,4.78 0.29,7.67C0.11,7.85 0,8.1 0,8.38C0,8.66 0.11,8.91 0.29,9.09L2.77,11.57C2.95,11.75 3.2,11.86 3.5,11.86C3.75,11.86 4,11.75 4.18,11.58C4.97,10.84 5.87,10.22 6.84,9.73C7.17,9.57 7.4,9.23 7.4,8.83V5.73C8.85,5.25 10.39,5 12,5C13.59,5 15.14,5.25 16.59,5.72V8.82C16.59,9.21 16.82,9.56 17.15,9.72C18.13,10.21 19,10.84 19.82,11.57C20,11.75 20.25,11.85 20.5,11.85C20.8,11.85 21.05,11.74 21.23,11.56L23.71,9.08C23.89,8.9 24,8.65 24,8.37C24,8.09 23.88,7.85 23.7,7.67C20.65,4.78 16.53,3 12,3M9,7V10C9,10 3,15 3,18V22H21V18C21,15 15,10 15,10V7H13V9H11V7H9M12,12A4,4 0 0,1 16,16A4,4 0 0,1 12,20A4,4 0 0,1 8,16A4,4 0 0,1 12,12M12,13.5A2.5,2.5 0 0,0 9.5,16A2.5,2.5 0 0,0 12,18.5A2.5,2.5 0 0,0 14.5,16A2.5,2.5 0 0,0 12,13.5Z" Fill="Black" />
                    </Canvas>
                </Viewbox>
                <Label Content="CONTACT DETAILS" FontSize="20" Margin="0,5" FontWeight="Bold"
                    HorizontalAlignment="Right" Foreground="DarkBlue"/>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBox Controls:TextBoxHelper.Watermark="Phone Number" Controls:TextBoxHelper.ClearTextButton="True"
                         FontSize="20" Margin="20,0,20,0" Width="300"/>
                <TextBox Controls:TextBoxHelper.Watermark="E-mail Address" Controls:TextBoxHelper.ClearTextButton="True"
                         FontSize="20"  Margin="0,0,20,0" Width="300"/>
            </WrapPanel>
        </WrapPanel>



        <WrapPanel Grid.Row="4" Grid.Column="1" Margin="100,0">
            <DataGrid>
                <!--ItemsSource="{Binding People}">-->

            </DataGrid>
        </WrapPanel>

    </Grid>
</UserControl>
